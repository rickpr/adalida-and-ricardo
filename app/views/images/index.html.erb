<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Alt text</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="sortImages">
    <% @images.each do |image| %>
    <tr id="<%= image.id %>">
      <td><%= image.name %></td>
      <td><%= image.description %></td>
      <td><%= image.alt_text %></td>
      <td><%= image_tag(image.image_variants(:thumbnail), height: '30px') if image.image.attached? %></td>
      <td><%= link_to 'Show', [@container, image] %></td>
      <td><%= link_to 'Edit', edit_carousel_image_path(@container, image) %></td>
      <td><%= link_to 'Destroy', [@container, image], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Image', new_carousel_image_path(@container) %> |
<%= link_to 'Back', @container %>
