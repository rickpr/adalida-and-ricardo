<p id="notice"><%= notice %></p>

<h1>Timeline Posts for <%= @timeline.name %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Body</th>
      <th>Date</th>
      <th>Image</th>
      <th>Image alt text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timeline_posts.each do |timeline_post| %>
      <tr>
        <td><%= timeline_post.title %></td>
        <td><%= timeline_post.description %></td>
        <td><%= timeline_post.body %></td>
        <td><%= timeline_post.date %></td>
        <td><%= image_tag timeline_post.image, height: '30px' if timeline_post.image.attached? %></td>
        <td><%= timeline_post.image_alt_text %></td>
        <td><%= link_to 'Show', [@timeline, timeline_post] %></td>
        <td><%= link_to 'Edit', edit_timeline_timeline_post_path(@timeline, timeline_post) %></td>
        <td><%= link_to 'Destroy', [@timeline, timeline_post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Timeline Post', new_timeline_timeline_post_path(@timeline) %> |
<%= link_to 'Back', @timeline %>
