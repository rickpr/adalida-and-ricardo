<%= form_with(model: [@timeline, timeline_post], local: true) do |form| %>
  <% if timeline_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(timeline_post.errors.count, "error") %> prohibited this timeline_post from being saved:</h2>

      <ul>
        <% timeline_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_area :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :carousel %>
    <%= form.select :carousel_id, options_from_collection_for_select(Carousel.all, :id, :name), class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
